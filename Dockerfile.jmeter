# Dockerfile.jmeter
# Use BlazeMeter JMeter 5.5 base image
FROM blazemeter/jmeter:5.5

# Install BlazeMeter Concurrency Thread Group plugin (jpgc-casutg)
RUN /opt/jmeter/bin/PluginsManagerCMD.sh install jpgc-casutg

# Optional: verify plugin installation
RUN /opt/jmeter/bin/PluginsManagerCMD.sh list

# Set working directory for tests
WORKDIR /tests

# Default entrypoint is JMeter, you can override in Jenkins pipeline
